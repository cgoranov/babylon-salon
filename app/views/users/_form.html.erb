<%= render partial: 'layouts/errors_msgs', locals: { object: @user }  %>

<div class="signup">
    
    <%= form_for(:user, url: signup_path) do |f| %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %><br>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %><br>
        <%= f.label :email %>
        <%= f.text_field :email %><br>
        <%= f.label :password %>
        <%= f.password_field :password %><br>
        <%= f.submit 'Create Account' %><br>
    <% end %>

    ------- or ---------

    <%= button_to 'Sign up in with Google', '/auth/google_oauth2' %>

</div>