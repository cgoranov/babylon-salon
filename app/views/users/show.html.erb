<%= content_tag(:p, "Your Profile") %>
<% if @user.img %>
    <%= image_tag(@user.img, size: "50x50") %>
<% else %>
    <%= image_tag(@user.avatar, size: "50x50") %>
<% end %>

<%= content_tag(:p, @user.full_name) %>
<%= content_tag(:p, @user.email) %>

<%= link_to "Edit Profile", edit_user_path(@user) unless !!@user.uid %>