
<% @user_appointments.each do |appt| %>
    <% if appt.full_date > Time.now %>
        <div class="appointment_detail">
            <p>Your appointment details: </p>
            <%= appt.full_date.strftime("%I:%M %p") + " - " + appt.end_time.strftime("%I:%M %p") %>
            <p>on:</p>
            <%= appt.full_date.strftime("%A %B %d, %Y") %>
            <p> with: </p>
            <%= appt.barber.first_name.capitalize %>
            <p> notes for Barber: </p>
            <%= appt.notes_for_barber %><br>
            <%= link_to content_tag(:i, " ", class: "fas fa-pen"), edit_user_appointment_path(@user, appt)%>
            <br>
            <%= link_to content_tag(:i, " ", class: "fas fa-trash-alt"), user_appointment_path(@user, appt), method: 'delete', data: { confirm: "Are you sure you want to delete?" } %>
        </div>
        <br>
    <% end %>
<% end %>