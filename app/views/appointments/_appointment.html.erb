<div class="appt_show">
<div class="appointment_detail">
    <p>Your appointment details: </p>
    <%= @appointment.full_date.strftime("%I:%M %p") + " - " + @appointment.end_time.strftime("%I:%M %p") %>
    <p>on:</p>
    <%= @appointment.full_date.strftime("%A %B %d, %Y") %>
    <p> with: </p>
    <%= @appointment.barber.first_name.capitalize %>
    <p> notes for Barber: </p>
    <%= @appointment.notes_for_barber %><br>
    <%= link_to content_tag(:i, " ", class: "fas fa-pen"), edit_user_appointment_path(@user, @appointment)%>
    <br>
    <%= link_to content_tag(:i, " ", class: "fas fa-trash-alt"), user_appointment_path(@user, @appointment), method: 'delete', data: { confirm: "Are you sure you want to delete?" } %>
</div>
</div>