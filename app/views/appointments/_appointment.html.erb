<div class="appointment_detail">
    <p>Your appointment details: </p>
    <%= @appointment.full_date.strftime("%I:%M %p") + " - " + @appointment.end_time.strftime("%I:%M %p") %>
    <p>on:</p>
    <%= @appointment.full_date.strftime("%A %B %d, %Y") %>
    <p> with: </p>
    <%= @appointment.barber.first_name.capitalize %>
    <%= link_to "Edit Appointment", edit_user_appointment_path(@user, @appointment)%>
    <%= link_to "Delete Appointment", user_appointment_path(@user, @appointment), method: 'delete', data: { confirm: "Are you sure you want to delete?" } %>
</div>