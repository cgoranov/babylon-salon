<%= form_for :appointment, url: user_appointments_path(@user) do |f| %>
    <%= f.label 'Select Barber' %>
    <%= f.collection_select :barber_id, Barber.all, :id, :first_name %><br>
    <%= f.label 'Select Time Slot' %>
    <%= select_tag "appointment[time_slot]", options_from_collection_for_select(time_slots, :itself, :itself) %><br>
    <%= f.label 'Select Date' %>
    <%= f.collection_select :date, date_slots(14), :itself, :itself %><br>
    <%= f.label 'Notes for Barber' %><br>
    <%= f.text_area :notes_for_barber %><br>
    <%= f.submit "Set Appointment" %><br>
<% end %>